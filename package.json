{
  "name": "@hoverkraft/slidesk-theme-workspace",
  "private": true,
  "version": "0.0.0",
  "description": "Workspace for the Hoverkraft SliDesk theme and example slides.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hoverkraft-tech/slidesk-theme.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/theme",
    "packages/slides"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start --workspace=@hoverkraft/slidesk-theme-slides",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint:ci": "npm run lint:ci --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:ci": "npm run test:ci --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.4.0"
  },
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{css,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
